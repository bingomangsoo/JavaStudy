package java0627;

import java.util.Scanner;

public class ex04 {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int num = 0;
		int a = 0;
		
		while (true) {
			System.out.println("숫자를 입력하세요");
			int inputnum = sc.nextInt();
			num+=inputnum;
			a++;
			if (num <0 || num>100) {
				System.out.println("합계 : " + num );
				System.out.println("평균 : " + num/a);
			}
			

		}
	}
}
