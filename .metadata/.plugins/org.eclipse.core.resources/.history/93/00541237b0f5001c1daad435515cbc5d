package java0627;

import java.util.Scanner;

public class java0627 {
	public static void main(String[] args) {
		
		Scanner sc = new Sacnner(System.in);
		
		System.out.println("금액을 입력하세요.");
		int money = sc.nextInt();
		System.out.println("메뉴를 고르세요.");
		System.out.print("1. 콜라(800원) 2. 생수(500원) 비타민워터(1500원) >>");
		int choice = sc.nextInt();
		
		switch (choice) {
		case 1 :
			System.out.print("잔돈 : ");
			int money1 = money-800;
			System.out.println(money1);
			System.out.println("천원 : ");
			
			System.out.println("천원 : " + (money1/1000) "," + "오백원 : " + ((money1 - money1/1000)/500) + "백원 : " +((money1 - money1/1000)/500)/100));
			
		
		case 2 :
			System.out.println("잔돈 : ");
			int money2 = money-500;
			System.out.println(money2);
			System.out.println("천원 : " + (money2/1000) "," + "오백원 : " + ((money2 - money2/1000)/500) + "백원 : " +((money2 - money2/1000)/500)/100));

		case 3:
			System.out.println("잔돈 : ");
			int money3 = money-1800;
			System.out.println(money3);
			System.out.println("천원 : " + (money3/1000) "," + "오백원 : " + ((money3 - money3/1000)/500) + "백원 : " +((money3 - money3/1000)/500)/100));

			
		}
	}
}
