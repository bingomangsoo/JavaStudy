package java0629;

public class asdf {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		for(int j=1; j<=5; j++) {
			for (int k =2; k>=j; k++) {

				System.out.print(" ");
			for (int i =1; i <=j; i++) {

				System.out.print("*");
			}
			System.out.println();
		}
		}
	}

}
