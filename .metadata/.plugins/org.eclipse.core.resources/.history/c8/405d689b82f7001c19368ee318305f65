package java0629;

public class f {
	public static void main(String[] args) {
		
		
		for (int j =1; j <=2; j++) {
			for (int i =3; i >=j; i--) {
				System.out.print("@");
			}System.out.println();
		}

		for (int j =0, k =3; j<=2; j++, k-=2) {
			for (int i =1; i<=k; i++) {
				System.out.print("@");
		
				
			}System.out.println();
		
		}
	}
}

for (int i =3; i >=j; i-=2) {
	System.out.print(" ");
}